                    android:layout_weight="1"
                    android:text="122 Tk"
                    android:textColor="@color/black" />


            </TableRow>


            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5mdp"
                    android:layout_marginEnd="@dimen/_5mdp"
                    android:text="Total Earned:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13font_mdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/totalCompletedTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5mdp"
                    android:layout_weight="1"
                    android:text="268 Tk"
                    android:textColor="@color/black" />


            </TableRow>


            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5mdp"
                    android:layout_marginEnd="@dimen/_5mdp"
                    android:text="Delivery Fee:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13font_mdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/deliveryFeeTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5mdp"
                    android:layout_weight="1"
                    android:text="25.30 Tk"
                    android:textColor="@color/black" />


            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5mdp"
                    android:layout_marginEnd="@dimen/_5mdp"
                    android:text="Total Delivery:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13font_mdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fullDayDeliveryTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5mdp"
                    android:layout_weight="1"
                    android:text="75.90 Tk"
                    android:textColor="@color/black" />


            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5mdp"
                    android:layout_marginEnd="@dimen/_5mdp"
                    android:text="Address:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13font_mdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/addressTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5mdp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:minLines="2"
                    android:text="S Tejkuni Para,Dhaka-1213,Bangladesh"
                    android:textColor="@color/black" />


            </TableRow>


            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5mdp"
                    android:layout_marginEnd="@dimen/_5mdp"
                    android:text="Date:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13font_mdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dateTimeTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5mdp"
                    android:layout_weight="1"
                    android:text="02/08/2023"
                    android:textColor="@color/black" />


            </TableRow>


        </TableLayout>

