<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ShopDetailsActivity">

    <RelativeLayout
        android:id="@+id/shopRL"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_170mdp">

        <ImageView
            android:id="@+id/shopIV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@color/colorGray02" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="#79000000" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_40mdp"
            android:padding="@dimen/_7mdp">

            <TextView
                android:id="@+id/shopNameTV"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_2mdp"
                android:layout_marginTop="@dimen/_2mdp"
                android:layout_toStartOf="@id/openCloseTV"
                android:layout_marginEnd="@dimen/_2mdp"
                android:layout_marginBottom="@dimen/_2mdp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="@string/fetching"
                android:layout_alignParentStart="true"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/phoneTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/shopNameTV"
                android:layout_marginStart="@dimen/_2mdp"
                android:layout_marginTop="@dimen/_2mdp"
                android:layout_marginEnd="@dimen/_2mdp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_toStartOf="@id/openCloseTV"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="@dimen/_2mdp"
                android:text="@string/fetching"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/emailTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/phoneTV"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/_2mdp"
                android:layout_marginTop="@dimen/_2mdp"
                android:layout_marginEnd="@dimen/_2mdp"
                android:layout_marginBottom="@dimen/_2mdp"
                android:maxLines="2"
                android:layout_toStartOf="@id/ratingBar"
                android:text="@string/fetching"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/openCloseTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/_2mdp"
                android:layout_marginTop="@dimen/_2mdp"
                android:layout_marginEnd="@dimen/_2mdp"
                android:layout_marginBottom="@dimen/_2mdp"
                android:padding="@dimen/_5mdp"
                android:text="@string/fetching"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/deliveryFeeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/openCloseTV"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/_2mdp"
                android:layout_marginTop="@dimen/_2mdp"
                android:layout_marginEnd="@dimen/_2mdp"
                android:layout_marginBottom="@dimen/_2mdp"
                android:text="@string/fetching"
                android:textColor="@color/white" />

            <RatingBar
                android:id="@+id/ratingBar"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/deliveryFeeTV"
                android:layout_alignParentEnd="true"
                android:numStars="5"
                android:progressBackgroundTint="@color/white"
                android:progressTint="@color/white" />

            <TextView
                android:id="@+id/addressTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/emailTV"
                android:layout_marginTop="@dimen/_5mdp"
                android:maxLines="2"
                android:text="@string/fetching"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/callBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:padding="@dimen/_5mdp"
                    android:src="@drawable/ic_call_white" />


                <ImageButton
                    android:id="@+id/mapBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5mdp"
                    android:background="@null"
                    android:padding="@dimen/_5mdp"
                    android:src="@drawable/ic_map_white" />


            </LinearLayout>


        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/toolbarRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rect_01"
        android:padding="@dimen/_10mdp">

        <ImageButton
            android:id="@+id/cartBtn"
            android:layout_width="@dimen/_25mdp"
            android:layout_height="@dimen/_25mdp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_5mdp"
            android:background="@null"
            android:src="@drawable/ic_cart_gray" />
        <ImageButton
            android:id="@+id/backArrowBtn"
            android:layout_width="@dimen/_25mdp"
            android:layout_height="@dimen/_25mdp"
            android:src="@drawable/ic_arrow_left_white"
            android:background="@null"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/shop_details"
            android:textColor="@color/white"
            android:textSize="@dimen/_15font_mdp" />

        <TextView
            android:id="@+id/cartCountTV"
            android:layout_width="@dimen/_15mdp"
            android:layout_height="@dimen/_15mdp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/shape_circle_03"
            android:gravity="center"
            android:text="@string/_10"
            android:textColor="@color/white"
            android:textSize="@dimen/_8mdp" />

        <ImageButton
            android:id="@+id/reviewBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_30mdp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_star_white" />



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/productsRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/shopRL">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textInputSearch"
            android:layout_marginStart="@dimen/_5mdp"
            android:layout_marginTop="@dimen/_5mdp"
            android:layout_marginEnd="@dimen/_5mdp"
            android:layout_marginBottom="@dimen/_5mdp"
            android:layout_toStartOf="@id/filterProductBtn"
            app:endIconMode="clear_text"
            app:hintEnabled="false"
            app:boxBackgroundMode="outline"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            >

            <EditText
                android:id="@+id/searchET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_rect_02"
                android:drawableStart="@drawable/ic_search_gray"
                android:drawablePadding="@dimen/_10mdp"
                android:hint="@string/search"
                android:padding="@dimen/_8mdp"
                android:textColor="@color/black"
                android:textColorHint="#919090" />

        </com.google.android.material.textfield.TextInputLayout>



        <ImageButton
            android:id="@+id/filterProductBtn"
            android:layout_width="@dimen/_35mdp"
            android:layout_height="@dimen/_35mdp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_5mdp"
            android:layout_marginEnd="@dimen/_5mdp"
            android:layout_marginBottom="@dimen/_5mdp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/ic_filter_gray" />

        <TextView
            android:id="@+id/filterProductTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textInputSearch"
            android:layout_marginStart="@dimen/_5mdp"
            android:layout_marginBottom="@dimen/_5mdp"
            android:text="@string/showing_all"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/itemsFoundTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_toEndOf="@id/filterProductTV"
            android:layout_below="@id/textInputSearch"
            android:textColor="#919090"
            android:layout_marginStart="@dimen/_3mdp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/productRV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/filterProductTV"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/sample_product_user" />


    </RelativeLayout>

</RelativeLayout>