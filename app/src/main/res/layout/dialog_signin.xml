<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="10dp"
       app:cardBackgroundColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_10mdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select"
                android:textSize="@dimen/_14font_mdp"
                android:textColor="#595454"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#A3A1A1"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/userLogin"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25mdp"
                android:text="@string/signin_user_title"
                android:textAllCaps="false"
                android:textColor="#595454"
                android:layout_marginTop="@dimen/_8mdp"
                android:padding="@dimen/_5mdp"
                android:background="@drawable/signin_user_seller_btn"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sellerLogin"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25mdp"
                android:text="@string/signin_seller_title"
                android:textAllCaps="false"
                android:layout_marginTop="@dimen/_15mdp"
                android:padding="@dimen/_5mdp"
                android:textColor="#595454"
                android:background="@drawable/signin_user_seller_btn"/>



        </LinearLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>