<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KretaBikreta" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background_theme</item>
        <item name="colorPrimaryVariant">@color/background_theme</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/background_theme</item>
        <item name="colorSecondaryVariant">@color/background_theme</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>



    <style name="Theme.KretaBikreta.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="mySwitchBack">
        <item name="colorControlActivated">@color/background_theme</item>
        <item name="colorSwitchThumbNormal">#E3DEDE</item>
        <item name="android:colorForeground">#42221f1f</item>
    </style>
</resources>